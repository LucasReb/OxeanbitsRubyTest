<%= form_with(url: process_import_movies_path, multipart: true) do |form| %>
  <div>
    <%= form.label :file, "Selecione o arquivo JSON de filmes" %>
    <%= form.file_field :file %>
  </div>
  <div>
    <%= form.label :json_data, "Dados JSON" %>
    <%= form.text_field :json_data, style: "display: none", id: "json-data-field" %>
  </div>
  <div>
    <%= form.submit "Enviar" %>
  </div>
<% end %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelector('input[type="file"]').addEventListener('change', function(event) {
      const file = event.target.files[0];
      const reader = new FileReader();
      reader.onload = function() {
        const json = JSON.parse(reader.result);
        document.getElementById('json-data-field').value = JSON.stringify(json);
      };
      reader.readAsText(file);
    });
  });
</script>
